# Eagle OVault Staging Environment Configuration
# This file contains non-sensitive staging configuration
# Sensitive values should be stored in AWS Secrets Manager or CI/CD secrets

# ============================================================================
# ENVIRONMENT
# ============================================================================

NODE_ENV=staging
ENVIRONMENT=staging

# ============================================================================
# RPC ENDPOINTS (Public Testnets)
# ============================================================================

# Sepolia Testnet (Hub Chain)
ETHEREUM_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# BSC Testnet (Spoke Chain)
BSC_RPC_URL=https://bsc-testnet-rpc.publicnode.com

# Arbitrum Sepolia (Spoke Chain)
ARBITRUM_RPC_URL=https://arbitrum-sepolia-rpc.publicnode.com

# Base Sepolia (Spoke Chain)
BASE_RPC_URL=https://base-sepolia-rpc.publicnode.com

# Avalanche Fuji (Spoke Chain)
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# ============================================================================
# LAYERZERO TESTNET CONFIGURATION
# ============================================================================

LZ_ETHEREUM_ENDPOINT_ID=40161  # Sepolia
LZ_BSC_ENDPOINT_ID=40102        # BSC Testnet
LZ_ARBITRUM_ENDPOINT_ID=40231   # Arbitrum Sepolia
LZ_BASE_ENDPOINT_ID=40245       # Base Sepolia
LZ_AVALANCHE_ENDPOINT_ID=40106  # Fuji

# ============================================================================
# MONITORING (Staging)
# ============================================================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK
GRAFANA_ADMIN_USER=admin

# ============================================================================
# AWS CONFIGURATION (Staging)
# ============================================================================

AWS_REGION=us-east-1
BACKUP_S3_BUCKET=eagle-ovault-backups-staging
BACKUP_RETENTION_DAYS=30

# ============================================================================
# DEPLOYMENT OPTIONS (Staging)
# ============================================================================

DEPLOYMENT_MODE=standard
AUTO_VERIFY=true
ESTIMATE_GAS=true
REQUIRE_CONFIRMATION=false

# ============================================================================
# TESTING & DEVELOPMENT
# ============================================================================

DEBUG=true
LOG_LEVEL=debug

# ============================================================================
# RATE LIMITING
# ============================================================================

RPC_TIMEOUT=120000
MAX_CONCURRENT_REQUESTS=5
TX_RETRY_ATTEMPTS=5

# ============================================================================
# GAS CONFIGURATION (Testnet)
# ============================================================================

# Use lower gas prices for testnets
MAX_PRIORITY_FEE_PER_GAS=1
MAX_FEE_PER_GAS=50

