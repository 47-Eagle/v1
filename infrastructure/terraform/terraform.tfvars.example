# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# Instance Configuration
instance_type   = "t3.large"
ssh_public_key  = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ..."
ssh_allowed_ips = ["1.2.3.4/32"] # Your IP address

# Alerts
alert_email = "devops@eagle-ovault.com"

# Vercel
vercel_api_token = "your-vercel-token"

# RPC URLs
ethereum_rpc_url  = "https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY"
bsc_rpc_url       = "https://bsc-rpc.publicnode.com"
arbitrum_rpc_url  = "https://arbitrum-rpc.publicnode.com"
base_rpc_url      = "https://base-rpc.publicnode.com"
avalanche_rpc_url = "https://api.avax.network/ext/bc/C/rpc"

# API Keys for Contract Verification
etherscan_api_key = "YOUR_ETHERSCAN_KEY"
bscscan_api_key   = "YOUR_BSCSCAN_KEY"
arbiscan_api_key  = "YOUR_ARBISCAN_KEY"
basescan_api_key  = "YOUR_BASESCAN_KEY"
snowtrace_api_key = "YOUR_SNOWTRACE_KEY"

# Monitoring
slack_webhook_url       = "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
pagerduty_service_key   = "YOUR_PAGERDUTY_KEY"
grafana_admin_password  = "secure-password-here"

# Backup Configuration
backup_retention_days = 90

# Feature Flags
enable_monitoring        = true
enable_backups          = true
enable_cloudwatch_alarms = true

# Additional Tags
tags = {
  Team  = "DevOps"
  Owner = "Platform Team"
}

